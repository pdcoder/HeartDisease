<% include ./header.ejs %>
<h2 class="heading">Please enter values for Prediction</h2>
<body>
<form method="post" action="/main">
  <div class="form-group">
  <label for="age">Enter your age:</label>
  <input id="age" type="text" class="form-control" placeholder ="Enter your age" name="age" value="60" />
  </div>
  <br>
  <div class="form-group">
      <label for="sex">Enter your gender:</label>
  <select id="sex" class="form-control" name="sex">
    <option>Male</option>
    <option>Female</option>
  </select>
  </div>
  <br>
  <div class="form-group">
      <label for="cp">Enter chest pain type:</label>
  <select id="cp" class="form-control" name="cp">
    <option>Typical angina</option>
    <option>Atypical angina</option>
    <option>Non-anginal pain</option>
    <option>Assymptotic</option>
    </select>
  </div>
  <br>
  <div class="form-group">
      <label for="bps">Enter Blood Pressure:</label>

  <input id="bps" type="text" class="form-control"  placeholder ="Resting blood pressure (in mm Hg)" name="bps" value="130"/>
  </div>
  <br>
  <div class="form-group">
      <label for="chol">Enter your Cholestrol level:</label>

  <input id="chol" type="text"  class="form-control" placeholder ="Enter serum cholestoral in mg/dl" name="chol" value="206"/>
  </div>
  <br>
  <div class="form-group">
      <label for="fbs">Enter Fasting blood pressure:</label>

  <input id="fbs" type="text" class="form-control"  placeholder ="Fasting blood sugar in mg/dl" name="fbs"/>
  </div>
  <br>
  <div class="form-group">
      <label for="ecg">Enter ECG type:</label>

  <select id="ecg" class="form-control"   name="restecg">
    <option>Normal</option>
    <option>Having ST-T wave abnormality</option>
    <option>Showing probable or definite left ventricular hypertrophy</option>

  </select>
  </div>
  <br>
 <div class="form-group">
    <label for="thalach">Maximum heart rate achieved:</label>

  <input id ="thalach" type="text" class="form-control" placeholder ="Maximum heart rate achieved" name="thalach" value="132" />
  </div>
  <br>
  <div class="form-group">
      <label for="exang">Exarcise induced angina:</label>

  <select id="exang" class="form-control" name="exang" >
    <option>Yes</option>
      <option>No</option>
      </select>
  </div>
  <br>
  <div class="form-group">
      <label for="oldpeak">ST depression induced by exercise relative to rest:</label>

  <input od="oldpeak" type="text" class="form-control" placeholder ="ST depression induced by exercise relative to rest" name="oldpeak" value="2.4" />
  </div>
  <br>
  <div class="form-group">
      <label for="slope">Slope of the peak exercise ST segment:</label>

  <select id="slope" class="form-control"name="slope">
    <option>Upsloping</option>
    <option>Flat</option>
    <option>Downsloping</option>
</select>
  </div>
  <br>
  <div class="form-group">
<label for="ca">Number of major vessels:</label>
  <input id="ca" type="text" class="form-control" placeholder ="Number of major vessels (0-3)" name="ca" value="2"/>
  </div>
  <br>
  <div class="form-group">
      <label for="thal">Thalassamia:</label>

  <select id="thal" class="form-control"  name="thal">
    <option>Normal</option>
    <option>Fixed Defect</option>
    <option>Reversible Defect</option>
</select>
  </div>
  <br>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
<script type='text/javascript' src="../public/js/form.js"></script>
<% if(tensor!==""){ %>

<div id="box1" class="box blurred-bg tinted">
    <div class="content">
      <h1>Predicted Result</h1>
  <p><%= tensor %></p>
        <p>Drag this box to move around</p>
    </div>
  </div>
  <% } %>
<% include ./footer.ejs %>